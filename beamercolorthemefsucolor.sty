% beamercolorthemefsucolor.sty
% Custom color theme for FSU Beamerposter

\ProvidesPackage{beamercolorthemefsucolor}[2025/04/04 FSU Color Theme Unofficial] 

\RequirePackage{kvoptions}

\SetupKeyvalOptions{
    family=fsucolortheme,
    prefix=fsucolor@
}

\DeclareBoolOption[false]{presentation}
\ProcessKeyvalOptions*

% ========== Color Definitions ==========
\definecolor{FSUGarnet}{RGB}{120, 47, 64}
\definecolor{FSUGold}{RGB}{206, 184, 136}
\definecolor{FSUWhite}{RGB}{255,255,255}
\definecolor{FSUBlack}{RGB}{0,0,0}
\definecolor{FSULightGray}{HTML}{f4f4f4}
\definecolor{NJUPurple}{RGB}{108,15,111}

% ========== Background & Base Text ==========
\setbeamercolor{background canvas}{bg=FSUWhite}
\setbeamercolor{normal text}{fg=FSUBlack}
\setbeamercolor{alerted text}{fg=NJUPurple}

%====================Frames for presentation =================
\setbeamercolor{frametitle}{fg=FSUGold, bg=NJUPurple}

% ========== Title & Header ==========
\iffsucolor@presentation
\setbeamercolor{title box}{fg=FSUWhite, bg=NJUPurple}
\setbeamercolor{headline left}{fg=FSUGold, bg=NJUPurple!80}
\setbeamercolor{headline right}{fg=FSUGold, bg=FSUBlack!80}
\else
\setbeamercolor{headline}{bg=NJUPurple, fg=FSUWhite}
\setbeamercolor{headline rule}{bg=NJUPurple}
\setbeamercolor{title}{fg=FSUWhite, bg=NJUPurple}
\setbeamercolor{headline title}{fg=FSUWhite}
\setbeamercolor{headline author}{fg=FSUWhite}
\setbeamercolor{headline institute}{fg=FSUWhite}
\fi 
% ========== Footer ==========
\iffsucolor@presentation
\setbeamercolor{footline left}{fg=FSUGold, bg=NJUPurple!80}
\setbeamercolor{footline center}{fg=NJUPurple, bg=FSUGold!70}
\setbeamercolor{footline right}{fg=FSUGold, bg=FSUBlack!80}
\else 
\setbeamercolor{footline}{fg=FSUWhite, bg=NJUPurple}
\fi

% ========== Blocks ==========
\iffsucolor@presentation
\setbeamercolor{block title}{fg=FSUGold, bg=NJUPurple}
\setbeamercolor{block body}{fg=FSUBlack, bg=NJUPurple!20}
\else 
\setbeamercolor{block title}{fg=NJUPurple, bg=FSUGold}
\setbeamercolor{block body}{fg=FSUBlack, bg=FSULightGray}
\setbeamercolor{block alerted title}{fg=FSUWhite, bg=NJUPurple}
\setbeamercolor{block alerted body}{fg=FSUBlack, bg=FSULightGray}
\setbeamercolor{block example title}{fg=FSUBlack, bg=FSUWhite}
\setbeamercolor{block example body}{fg=FSUBlack, bg=FSUWhite}
\fi 
% ========== Lists ==========
\setbeamercolor{item projected}{fg=FSUWhite, bg=NJUPurple}
\setbeamercolor{itemize item}{fg=NJUPurple}
\setbeamercolor{enumerate item}{fg=NJUPurple}

% ========== Navigation (Hidden) ==========
\setbeamercolor{navigation symbols}{fg=NJUPurple}
\beamertemplatenavigationsymbolsempty

% ========== Captions and Table of Contents ==========
\setbeamercolor{caption name}{fg=NJUPurple}
\setbeamercolor{section in toc}{fg=NJUPurple, bg=FSULightGray}
\setbeamercolor{subsection in toc}{fg=FSUBlack, bg=FSULightGray}
